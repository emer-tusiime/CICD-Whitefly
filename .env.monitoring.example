# ========================================
# Grafana Monitoring Environment Variables
# ========================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit the actual .env.local file to Git!

# ========================================
# FRONTEND MONITORING (Grafana Faro)
# ========================================

# Get these from Grafana Cloud → Frontend Observability → Faro
VITE_GRAFANA_FARO_URL=https://faro-collector-xxx.grafana.net/collect
VITE_GRAFANA_FARO_APP_ID=your-app-id-here
VITE_GRAFANA_FARO_APP_NAME=WhiteFly Frontend
VITE_GRAFANA_FARO_ENV=production

# Optional: Sample rate (1.0 = 100%, 0.1 = 10%)
# Lower values reduce costs for high-traffic apps
VITE_FARO_SAMPLE_RATE=1.0

# Optional: Enable monitoring in development
# VITE_ENABLE_MONITORING=true

# Application version (optional)
VITE_APP_VERSION=1.0.0

# ========================================
# BACKEND MONITORING (Prometheus)
# ========================================

# Enable Prometheus metrics endpoint
ENABLE_METRICS=True

# Grafana Cloud Prometheus endpoint (optional - for push gateway)
GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-xxx.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_USER=your-prometheus-user-id
GRAFANA_CLOUD_PROMETHEUS_API_KEY=your-api-key

# ========================================
# GRAFANA CLOUD CREDENTIALS
# ========================================

# Main Grafana instance
GRAFANA_CLOUD_URL=https://your-stack.grafana.net
GRAFANA_CLOUD_API_KEY=your-grafana-api-key

# ========================================
# ALERTING (Optional)
# ========================================

# Email notifications
ALERT_EMAIL=your-email@example.com

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ========================================
# NOTES
# ========================================
# 
# For Vercel (Frontend):
# - Add VITE_* variables in Vercel Dashboard → Settings → Environment Variables
# - Make sure to add them for Production, Preview, and Development environments
#
# For Render (Backend):
# - Add backend variables in Render Dashboard → Environment
# - Variables are automatically available to your Django app
#
# Security:
# - Never commit actual API keys to Git
# - Use different keys for development and production
# - Rotate keys regularly
