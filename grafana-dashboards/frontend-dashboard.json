{
  "dashboard": {
    "title": "WhiteFly Frontend Monitoring",
    "tags": ["frontend", "react", "faro"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Page Load Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(faro_page_load_time_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(faro_page_load_time_seconds_bucket[5m]))",
            "legendFormat": "p99"
          },
          {
            "expr": "rate(faro_page_load_time_seconds_sum[5m]) / rate(faro_page_load_time_seconds_count[5m])",
            "legendFormat": "avg"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(faro_errors_total[5m])",
            "legendFormat": "Errors per second"
          }
        ]
      },
      {
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "count(count by (session_id) (faro_page_views_total))",
            "legendFormat": "Active Sessions"
          }
        ]
      },
      {
        "title": "Total Page Views",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "sum(faro_page_views_total)",
            "legendFormat": "Page Views"
          }
        ]
      },
      {
        "title": "API Request Duration",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(faro_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}} - p95"
          }
        ]
      },
      {
        "title": "Browser Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "count by (browser) (faro_page_views_total)",
            "legendFormat": "{{browser}}"
          }
        ]
      },
      {
        "title": "Top Errors",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum by (error_message) (rate(faro_errors_total[5m])))",
            "format": "table"
          }
        ]
      },
      {
        "title": "Image Upload Events",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "rate(faro_events_total{event_name=\"image_upload\"}[5m])",
            "legendFormat": "Uploads per second"
          }
        ]
      },
      {
        "title": "Detection Events",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "rate(faro_events_total{event_name=\"detection_completed\"}[5m])",
            "legendFormat": "Detections per second"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
